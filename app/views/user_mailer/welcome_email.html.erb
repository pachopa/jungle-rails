
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
    <h1>Welcome to example.com, <%= @order.email %></h1>
    <h2>Your order number is : <%= @order.id %></h2>
    <% @order.line_items.each do |line_item| %>
      <tr>
        <td>
          <h4>Item name : <%= line_item.product.name %></h4>
          <br>
          <p>Item description : <%= line_item.product.description %></p>
        </td>
        <td>
          Item Price : <%= line_item.item_price %>
        </td>
        <td>
          Item quantity : <%= line_item.quantity %>
        </td>
        <td>
          Item total price : <%= line_item.total_price %>
        </td>
      </tr>
    <% end %>
    <p>Thanks for joining and have a great day!</p>
  </body>
